{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "baseUrl": ".",
      "paths": {
        "@/components/*": ["components/*"],
        "@/utils/*": ["utils/*"],
        "@/lib/*": ["lib/*"],
        "@/data/*": ["data/*"],
        "@/css/*": ["styles/*"],
        "@/assets/*": ["public/*"],
        "contentlayer/generated": ["./.contentlayer/generated"]
      },
      "incremental": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".contentlayer/generated", ".eslintrc.js"],
    "exclude": ["node_modules", "**/*.js"]
  }
  