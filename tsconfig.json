{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "src/components/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/src/*": [
        "src/*"
      ],
      "@/css/*": [
        "src/styles/*"
      ],
      "@/assets/*": [
        "public/*"
      ],
      "@/contentlayer/generated": [
        ".contentlayer/generated"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".contentlayer/generated",
    ".eslintrc.js",
    "src/lib/types/index.d.ts",
    "src/pages/auth/[...nextauth].js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.js"
  ]
}
